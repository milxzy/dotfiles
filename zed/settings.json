{
  // change me later
  "wsl_connections": [
    {
      "distro_name": "Ubuntu",
      "user": null,
      "projects": []
    }
  ],
  "show_edit_predictions": false,
  "features": {
    "edit_prediction_provider": "copilot",
  },
  "helix_mode": false,
  "icon_theme": "Material Icon Theme",
  "vim_mode": true,
  "relative_line_numbers": "enabled",
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "buffer_font_fallbacks": ["BlexMono Nerd Font Mono"],
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Mocha",
  },
}
